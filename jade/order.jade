doctype
html
	head
		include components/meta.jade
	body
		include components/header.jade

		main
			section(id="content")
				include components/breadcrumbs.jade
				div(class="center clear")
					h1(class="content-header") Подтверждение заказа

					form(id="order-left")
						div(class="clear")
							h2 Ваши персональные данные

							div(class="order-input-block")
								label(for="name") Имя
								input(type="text" name="name")

							div(class="order-input-block")
								label(for="sername") Фамилия
								input(type="text" name="sername")

							div(class="order-input-block")
								label(for="email") E-mail
								input(type="email" name="email")

							div(class="order-input-block")
								label(for="index") Индекс
								input(type="text" name="index")

							div(class="order-input-block")
								label(for="city") Город
								input(type="text" name="city")

							div(class="order-input-block")
								label(for="address") Улица, дом, картира
								input(type="text" name="address")

								label(class="checkbox-ui send-checkbox")
									input(type="checkbox" name="send")
									div(class="checkbox-item")
									div Отправить на этот адрес

							div(class="order-input-block")
								label(for="address") Телефонный номер
								input(type="text" name="address")

						div(class="order-input-block")
							h3 Метод оплаты
							label(class="radio-ui")
								input(type="radio" name="payment-type" value="credit")
								div(class="radio-item")
								div Кредитная карта
							label(class="radio-ui")
								input(type="radio" name="payment-type" value="paypal")
								div(class="radio-item")
								div Paypal
							label(class="radio-ui")
								input(type="radio" name="payment-type" value="qiwi-wallet")
								div(class="radio-item")
								div Qiwi wallet

						div(class="order-input-block")
							h3 Доставка
							label(class="radio-ui")
								input(type="radio" name="delivery-type" value="courier")
								div(class="radio-item")
								div Курьером
							label(class="radio-ui")
								input(type="radio" name="delivery-type" value="point")
								div(class="radio-item")
								div Пункт выдачи
						div(class="clear order-buttons")
							a(href="#" class="to-cart") Вернутся в корзину
							a(href="#" class="to-pay") Перейти к оплате
					div(id="order-right")
						img(src="i/order.png")