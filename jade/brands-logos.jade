doctype
html
	head
		include components/meta.jade
	body
		include components/header.jade

		main
			section(id="content")
				include components/breadcrumbs.jade
				div(class="center clear")
					h1(class="content-header") Каталог
					aside(id="sidebar" class="left-sidebar clear")
						include components/sidebar-catalog.jade
					div(id="content-text" class="right-content clear")
						div(id="brands-header")
							input(type="text" id="brands-search" placeholder="Поиск по брендам")

							div(id="brands-sort") Сортировать: 
								a(href="#") по популярности
								span /
								a(href="#" class="active") по алфавиту

						div(id="brands-logos" class="clear")
							- for(i=0; i<40; i++)
								a(href="#" class="brand-logo-card")
									img(src="i/Tinylove-Logo.png")
									div(class="brand-logo-title") Gulliver
						

						button(id="load-more-logos") Посмотреть еще
						