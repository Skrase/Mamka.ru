lightBlue = #344d76
blue = #00104b
white = #FFF
black = #000
green = #78c479
red = #d50000
yelow = #ffd200


mobileCardBorder = #c5cad5


sidebarBlue = #999fb7

brandLogoBorderGray = #c7cbd7
brandLogoBorderPink = #fddaea

subcategoryCardBorder = #e8e8e8


cartBorder = #d6dbe4
cartRemove = #7b83a2


historyLink = #4758a5



addToCartButton = #5a74a0


tableBorder = #e6e7ed
tableBlue = #f2f3f9


tagYelow = #c5a200
tagBlue = #4156b5
tagRed = #910202
tagLightBlue = #6079ea
headerBorderColor = #eaedf1
cardBorderColor = #ecebeb


reviewTimeColor = #a2a2a2


googleColor = #fd4934
vkColor = #4c75a3
okColor = #fe7f2b

blueRgba(n)
	rgba(52, 77, 118, n)

lightBlueRGBA(n)
	rgba(127, 138, 168, n)

placeholder-color(n)
	&::-webkit-input-placeholder
		color n
	&::-moz-placeholder
		color n
	&:-moz-placeholder
		color n
	&:-ms-input-placeholder
		color n

futura = "FuturaRoundBold", "Roboto", sans-sarif

roboto = "Roboto", sans-sarif

.count-picker
	line-height 25px
	text-align center
	font-weight 500
	.count-button
		display inline-block
		border none
		background blue
		color white
		width 25px
		height 25px
		border-radius 2px
		cursor pointer
		transition all .2s ease-in
		&:hover
			background pink
	.count-counter
		display inline-block
		width 15px

body
	background white
	font-family roboto
	font-size 16px

input, textarea
	font-family roboto

a
	text-decoration none

img
	max-width 100%
	height auto

*
	margin 0
	padding 0

.clear:after
	display table
	width 100%
	clear both
	content ""

.center
	max-width 1230px
	margin 0 auto

.hidden
	display none

.checkbox-ui
	display inline-block
	font-weight 300
	cursor pointer
	overflow hidden
	margin 0 0 9px
	line-height 16px
	color blue
	input[type="checkbox"]:checked
		+ div
			font-weight 500
		+ div.checkbox-item
			background-color blue
			border 1px solid blue
			background-size 12px 12px
	&:hover
		font-weight 500
		.checkbox-item
			border 1px solid blue
	input
		display none
	div
		display inline-block
		font-size 14px
		line-height 16px
		vertical-align middle
		&.checkbox-item
			width 14px
			height 14px
			border 1px solid topGray
			border-radius 2px
			margin 0 25px 0 0
			vertical-align top
			background-color white
			background-image url("../i/check.png")
			background-position center center
			background-repeat no-repeat
			background-size 0 0
			transition all .2s ease-in
	

.more-button
	display block
	margin 20px auto
	width 145px
	background lightBlue
	text-align center
	color white
	font-size 14px
	font-weight 500
	line-height 30px
	border-radius 2px
	transition all .2s ease-in
	&:hover
		background blue

