#pagination
	padding 0 30px 30px
	a
		display inline-block
		margin 0 5px 0 0
		line-height 25px
		width 25px
		height 25px
		background sidebarBlue
		text-align center
		color white
		font-weight 400
		font-size 14px
		border-radius 2px
		transition all .2s ease-in
		&:hover
			background lightPink

.content-search
	input
		border 1px solid topGray
		border-radius 2px
		margin 5px 0 0 30px
		padding 0 40px 0 20px
		line-height 40px
		width 245px
		color blue
		background url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20viewBox%3D%220%200%20300%20300%22%20stroke%3D%22%2300104b%22%3E%3Cdefs%3E%3Cstyle%3E.cls-1%7Bfill%3Anone%3Bstroke-linecap%3Around%3Bstroke-linejoin%3Around%3Bstroke-width%3A6px%3B%7D%3C/style%3E%3C/defs%3E%3Ccircle%20class%3D%22cls-1%22%20cx%3D%22135.6%22%20cy%3D%22139%22%20r%3D%2262%22/%3E%3Cpath%20class%3D%22cls-1%22%20d%3D%22M218%20226l-40.8-41M139%2093.3a39.7%2039.7%200%200%200-44%2032%22/%3E%3C/svg%3E') no-repeat right center
		background-size 40px 40px
		placeholder-color(blue)
	.count-search
		font-weight 300
		font-style italic
		color blue
		font-size 12px
		margin 10px 0 20px 30px

#content
	.content-header
		font-family futura
		font-size 32px
		margin 0 30px 30px
		color lightBlue
		// line-height 69px
		&:after
			display block
			background lightBlue
			content ""
			height 4px
			border-radius 2px


#content-text
	width 900px
	margin 0 30px 0 0
	&.right-content
		float right
	&.left-content
		float left
	h1
		font-family futura
		font-size 32px
		margin 0 0 30px 30px
		color lightBlue
		// line-height 69px
		&:after
			display block
			background lightBlue
			content ""
			height 4px
			border-radius 2px


#kabinet-tabs
	margin 0 30px
	font-size 18px
	text-align right
	border-bottom 3px solid lightBlue
	a
		display inline-block
		color lightBlue
		font-size 18px
		line-height 35px
		font-family futura
		color lightBlue
		padding 0 25px
		transition all .2s ease-in
		&:hover
			color pink
		&.active
			background lightBlue
			color white
			position relative
			&:before
				width 100%
				height 15px
				position absolute
				top -15px
				left 0
				content ""
				display block
				background: linear-gradient(to top right, lightBlue 48%, transparent 52%), linear-gradient(to top right, transparent 50%, transparent 50%)



@media screen and (max-width: 1230px)
	#content
		.content-header
			margin 0 20px 30px
			font-size 27px
			&:after
				height 3px
	#content-text
		width calc(((100% / 12) * 9) - 20px)
		margin 0 20px 0 0
		h1
			font-size 27px
			margin 0 20px 30px

@media screen and (max-width: 1230px)

	.content-search
		input
			line-height 28px
			font-size 12px
			margin 0 0 0 20px
		.count-search
			font-size 12px
			margin 10px 0 20px 20px


	#sidebar

		width calc(100% / 12 * 3 - 20px)
		&.left-sidebar
			margin 0 0 0 20px
		&.right-sidebar
			margin 0 20px 0 0
		#sidebar-filter
			padding 15px
			form
				background white
				padding 15px 15px 15px
				font-size 10px
				h2
					font-size 15px
				h3
					font-size 12px
					color blue
					margin 0 0 12px
				#sidebar-search
					font-size 10px
					line-height 20px
				.checkbox-ui div
					font-size 12px
					&.checkbox-item
						margin 0 20px 0 0
						width 12px
						height 12px
				.price-from
					width calc(50% - 10px)
					input
						line-height 20px
				.price-to
					width calc(50% - 10px)
					input
						line-height 20px
				#reet-filter
					font-size 15px
					width calc(100% + 30px)
					margin 20px -15px 0
		#sidebar-one-levlel ul li
			display block
			font-size 12px
			font-weight 500
			a
				line-height 30px
				padding 0 25px
				border-bottom 4px solid white

@media screen and (max-width: 1023px)

	#content-text
		width calc(((100% / 12) * 8) - 20px)
		margin 0 20px 0 0


@media screen and (max-width: 1023px)

	#sidebar
		width calc(100% / 12 * 4 - 20px)

@media screen and (max-width: 767px)

	#sidebar
		width 280px!important
		margin -30px auto 30px!important
		float none!important
		#sidebar-filter
			display none



@media screen and (max-width: 767px)

	.content-search
		text-align center
		input
			width 218px
			margin 0

	#content-text
		width auto!important
		float none!important
		margin 0!important
		h1
			display none
	


	#content
		.content-header
			display none

	#breadcrumbs
		display none
	#mobile-crumb
		display block
		padding 2px 20px 0 40px
		line-height 23px
		color blue
		font-size 12px
		font-weight 500
		border-bottom 1px solid headerBorderColor
		margin 0 0 30px
		background url("../i/crumbs-arrow.png") no-repeat 20px center
		background-size 5px 10px
