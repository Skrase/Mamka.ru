	#product-char
		float right
		margin 0
		padding 20px
		width 300px
		background url("../i/pattern.png") repeat-y left center
		background-size 100% auto
		.product-char-content
			background white
			font-size 14px
			font-weight 300

			padding 20px
			line-height 24px
			div
				margin 0 0 10px
			strong
				font-weight 500

#product-tabs
	margin 45px 30px 0
	#product-tabs-buttons
		border-bottom 4px solid lightPink
		.product-tab-button
			display inline-block
			color lightBlue
			font-size 24px
			line-height 45px
			font-family futura
			color lightBlue
			padding 0 25px
			cursor pointer
			transition color .2s ease-in
			&:hover
				color pink
			&.active
				background lightPink
				color white
				position relative
				&:before
					width 100%
					height 15px
					position absolute
					top -15px
					left 0
					content ""
					display block
					background: linear-gradient(to top right, lightPink 48%, transparent 52%), linear-gradient(to top right, transparent 50%, transparent 50%)



#product-tabs-contents
	padding 30px 0
	color blue
	.product-tab
		display none
		&.active
			display block
		.char-table
			float left
			width 470px
			border-collapse collapse
			td
				width 50%
				height 44px
				font-size 14px
				padding 0 25px
				border 1px solid tableBorder
			tr:nth-child(odd)
				background tableBlue
		.pordoct-description
			float right
			width 570px
			line-height 24px
			h2
				font-size 24px
				margin 0 0 30px
				font-weight 700
			h3
				font-size 18px
				margin 0 0 15px
				font-weight 700
			p
				font-size 14px
				font-weight 300
				margin 0 0 30px
			ul, ol
				font-size 14px
				font-weight 300
				margin 0 0 30px 20px
			.product-brand
				display block
				width auto
				margin 0 0 15px
				img
					max-width 200px
					width 100%
				.to-brand-link
					text-decoration underline
					color blue
					font-size 18px
					font-weight 500
					display block
					transition all .2s ease-in
					&:hover
						color pink
		.review-item
			width 770px
			margin 0 0 30px
			color blue
			.review-autor
				font-size 18px
				font-weight 700
				margin 0 0 10px
			time
				font-size 16px
				font-weight 300
				color reviewTimeColor
				margin 15px 0 15px
				display block
			blockquote
				line-height 24px
				padding 20px 0 10px 100px
				background url("../i/q.png") 30px 15px no-repeat
			
		#add-review
			max-width 770px
			input[type="text"]
				display block
				border 1px solid topGray
				width calc(100% - 42px)
				max-width 728px
				line-height 40px
				border-radius 3px
				padding 0 20px
				font-size 14px
				margin 0 0 20px
				color blue
				font-weight 300
				placeholder-color(blue)
				transition all .2s ease-in
				&:focus
					border 1px solid blue
					outline none
					
			textarea
				display block
				border 1px solid topGray
				width calc(100% - 42px)
				max-width 728px
				line-height 24px
				border-radius 3px
				padding 10px 20px
				font-size 14px
				margin 0 0 20px
				color blue
				font-weight 300
				placeholder-color(blue)
				transition all .2s ease-in
				resize none
				height 90px
				&:focus
					border 1px solid blue
					outline none
			input[type="submit"]
				float right
				line-height 42px
				border none
				width 200px
				border-radius 3px
				background lightBlue
				transition all .2s ease-in
				color white
				font-size 18px
				font-weight 700
				&:hover
					background blue

.recomendet-buttons
	margin 50px 30px 30px
	font-size 18px
	border-bottom 3px solid lightBlue
	.recomendet-button
		display inline-block
		color lightBlue
		font-size 32px
		line-height 45px
		font-family futura
		color lightBlue
		padding 0 25px
		cursor pointer
		transition color .2s ease-in
		&:hover
			color pink
		&.active
			background lightBlue
			color white
			position relative
			&:before
				width 100%
				height 15px
				position absolute
				top -15px
				left 0
				content ""
				display block
				background: linear-gradient(to top right, lightBlue 48%, transparent 52%), linear-gradient(to top right, transparent 50%, transparent 50%)

.recomendet-tab-content
	display none
	&.active
		display block


@media screen and (max-width: 1230px)

	#product-gallery
		width calc(100% / 12 * 3)
		margin 0 0 20px 20px

	#product-content
		width calc(100% / 12 * 8)
		margin 0 20px 20px 0
		#product-header
			font-size 27px
			&:after
				height 3px
		#product-info
			width calc(50% + 20px)
			.price-title
				font-size 15px
			.price-size
				font-size 30px
			#product-count
				width 44px
				line-height 20px
			#product-add-to-cart
				padding 0 0 0 45px
				width 140px
				line-height 30px
				font-size 15px
				background-size 35px 35px
				// background-position 15px -8px
				background-position 15px -4px
			#product-share
				a
					line-height 30px
					padding 0 0 0 30px
					height 30px
					background-size 18px 18px!important
		#product-char
			width calc(50% - 90px)
			padding 20px
			font-size 12px


	#product-tabs-contents
		.product-tab
			.char-table
				width calc(100% / 12 * 5)
			.pordoct-description
				width calc(100% / 12 * 6)
				h2
					font-size 12px
					margin 0 0 15px
				h3
					font-size 10px
					margin 0 0 15px
				p
					font-size 12px
					margin 0 0 15px
				.to-brand-link
					font-size 15px

			.review-item
				width calc(100% / 12 * 8)
				margin 0 0 20px
				.review-autor
					font-size 15px
