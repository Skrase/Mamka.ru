
#product-gallery
	float left
	width 300px
	margin 0 0 0 30px
	#big-product-image
		width calc(100% - 2px)
		height auto
		border 1px solid cardBorderColor
		border-radius 3px
		display block
		padding-top 100%
		position relative
		img
			position absolute
			display block
			left 0
			top 0
			right 0
			bottom 0
			margin auto
			max-width 100%
			max-height 100%
	#small-product-images
		margin 0 0 0 -17px
		.small-product-image
			cursor pointer
			float left
			display block
			width calc(33.333333% - 19px)
			margin 17px 0 0 17px
			height 88px
			border-radius 3px
			border 1px solid cardBorderColor
			position relative
			img
				position absolute
				left 0
				top 0
				right 0
				bottom 0
				margin auto
				max-width 100%
				max-height 100%

#product-content
	width 800px
	float right
	margin 0 30px 0 0
	color blue
	#product-header
		font-family futura
		font-size 32px
		margin 0 0 30px
		color lightBlue
		&:after
			display block
			background lightBlue
			content ""
			height 4px
			border-radius 2px
	#product-info
		width 400px
		float left
		margin -10px 0 0
		.product-stars
			vertical-align middle
			display inline-block
			width 97px
			height 17px
			&.stars-0
				background url("../i/stars.png") no-repeat center center
			&.stars-1
				background url("../i/stars-1.png") no-repeat center center
			&.stars-2
				background url("../i/stars-2.png") no-repeat center center
			&.stars-3
				background url("../i/stars-3.png") no-repeat center center
			&.stars-4
				background url("../i/stars-4.png") no-repeat center center
			&.stars-5
				background url("../i/stars-5.png") no-repeat center center
		.to-reviews
			vertical-align middle
			margin 0 0 0 20px
			line-height 17px
			font-size 14px
			font-weight 300
			color blue
			text-decoration underline
		p
			font-size 14px
			color blue
			font-weight 300
			margin 20px 0 0
			line-height 24px
		.price-title
			margin 25px 0 15px
			font-weight 500
		.price-size
			font-size 36px
			color pink
			font-weight 700
			display inline-block
			line-height 32px
			margin 0 0 15px
			vertical-align bottom
		#product-count
			width 53px
			border-radius 3px
			padding 0 0 0 10px
			margin 0 0 15px 30px
			height 25px
			overflow hidden
			vertical-align middle
			border 1px solid topGray
			display inline-block
			input
				outline none
				border none
				width 100%
				height 25px
				line-height 25px
		#product-add-to-cart
			border none
			padding 0 0 0 45px
			text-align center
