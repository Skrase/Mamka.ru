#home-cards-buttons
	border-bottom 3px solid lightBlue
	margin 30px
	.home-cards-button
		float left
		font-size 32px
		line-height 48px
		font-family futura
		color lightBlue
		padding 0 25px
		cursor pointer
		transition all .2s ease-in
		&:hover
			color pink
		&.active
			background lightBlue
			color white
			position relative
			&:before
				width 100%
				height 20px
				position absolute
				top -20px
				left 0
				content ""
				display block
				background: linear-gradient(to top right, lightBlue 48%, transparent 52%), linear-gradient(to top right, transparent 50%, transparent 50%)
