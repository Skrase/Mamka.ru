#home-banner
	background url("/i/banner-bg.png")
	background-size cover
	height 303px
	#home-banner-slider
		margin 0 0 0 30px
		width 729px
		float left
		.slide
			display block
			position relative
			color white
			text-transform uppercase
			img
				display block
			.slide-title
				position absolute
				bottom 0
				left 0
				width calc(100% - 15px)
				padding 0 15px 0 0
				line-height 75px
				text-align right
				font-size 47px
				font-family futura
				background lightBlueRGBA(.34)
	#home-banner-banner
		float right
		margin 0 30px 0 0