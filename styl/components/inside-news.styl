#sidebar
	.small-action-card
		width auto
		float none
		padding-bottom 100%
		margin 0 0 30px

.inside-news-card
	display block
	margin 0 0 30px 30px
	padding 0 0 30px
	border-bottom 1px solid cartBorder
	color blue
	a
		color blue
	.inside-news-card-image
		float left
		display block
		margin 0 30px 0 0
		width calc( 33.333333% - 20px)
	.inside-news-card-info
		width calc( 66.6666666% - 10px)
		float right
		margin 0
		h2
			font-size 30px
			font-family futura
			margin 0 0 20px
		p
			font-size 14px
			line-height 25px
			font-weight 300
		.news-card-tags
			font-weight 500
			font-size 14px
			margin 30px 0 0
			.news-card-time
				border-right 1px solid blue
				padding 0 5px 0 0

			.news-card-tag
				border-right 1px solid blue
				padding 0 5px
			.news-card-more
				padding 0 5px


@media screen and (max-width: 1230px)

	.inside-news-card
		margin 0 0 30px 20px
		.inside-news-card-image
			float left
			display block
			margin 0 20px 0 0
			width calc( 33.333333% - 10px)
		.inside-news-card-info
			width calc(66.6666666% - 10px)
			h2
				font-size 22px
			p
				font-size 12px
				line-height 24px
			.news-card-tags
				font-size 12px

@media screen and (max-width: 767px)

	.inside-news-card
		margin 0 20px 30px 20px
		.inside-news-card-image
			width 100%
			height auto
			float none
			margin 0 0 20px
			img
				width 100%
				height auto
		.inside-news-card-info
			width auto
			float none