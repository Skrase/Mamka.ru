.letters-header
	margin 40px 0 0 30px
	font-size 18px
	font-weight 500
	color blue

.a-z
	float left
	width calc(25% - 30px)
	margin 0 0 15px 30px
	li
		display block
		font-size 14px
		font-weight 300
		line-height 22px
		a
			color blue
			&:hover
				color pink
	.letter
		font-size 30px
		text-transform uppercase
		font-weight 500
		color pink
		margin 30px 0

#brands-header
	font-size 14px
	input
		border 1px solid topGray
		border-radius 2px
		margin 5px 0 0 30px
		padding 0 40px 0 20px
		line-height 40px
		width 245px
		color blue
		background url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20viewBox%3D%220%200%20300%20300%22%20stroke%3D%22%2300104b%22%3E%3Cdefs%3E%3Cstyle%3E.cls-1%7Bfill%3Anone%3Bstroke-linecap%3Around%3Bstroke-linejoin%3Around%3Bstroke-width%3A6px%3B%7D%3C/style%3E%3C/defs%3E%3Ccircle%20class%3D%22cls-1%22%20cx%3D%22135.6%22%20cy%3D%22139%22%20r%3D%2262%22/%3E%3Cpath%20class%3D%22cls-1%22%20d%3D%22M218%20226l-40.8-41M139%2093.3a39.7%2039.7%200%200%200-44%2032%22/%3E%3C/svg%3E') no-repeat right center
		background-size 40px 40px
		placeholder-color(blue)
	#brands-sort
		float right
		font-weight 300
		color blue
		margin 5px 0 0 30px
		line-height 40px
		a
			color topGray
			font-weight 500
			text-decoration underline
			transition all .2s ease-in
			&:hover
				color pink
			&.active
				color blue
		span
			margin 0 5px


#brands-logos
	margin 0 0 0 30px
	.brand-logo-card
		display block
		float left
		width 25%
		height 120px
		margin 30px 0 0
		transition all .2s ease-in
		&:nth-child(odd)
			border-bottom 2px solid brandLogoBorderGray
			&:hover
				border-bottom 2px solid lightBlue
		&:nth-child(even)
			border-bottom 2px solid brandLogoBorderPink
			&:hover
				border-bottom 2px solid pink

		img
			max-width 100%
			max-height 70px
			margin 0 auto
			display block
		.brand-logo-title
			text-align center
			font-weight 500
			color blue
			font-size 18px
			line-height 50px

@media screen and (max-width: 1230px)

	.a-z
		width calc(33.333333% - 20px)
		margin 0 0 0 20px

	#brands-header
		font-size 14px
		input
			margin 2px 0 0 20px
			width calc(50% - 82px)
			line-height 30px
		#brands-sort
			font-size 10px
			margin 2px 0 0 20px
			line-height 30px
	.letters-header
		margin 40px 0 0 20px

	#brands-logos
		margin 0 0 0 20px
		.brand-logo-card

			width 20%
			height 100px
			&:nth-child(odd)
				border-bottom 1px solid brandLogoBorderGray
				&:hover
					border-bottom 1px solid lightBlue
			&:nth-child(even)
				border-bottom 1px solid brandLogoBorderPink
				&:hover
					border-bottom 1px solid pink

			img
				max-height 60px
			.brand-logo-title
				font-size 15px
				line-height 40px
				


@media screen and (max-width: 1023px)
	#brands-logos
		margin 0 0 0 20px
		.brand-logo-card
			width 25%
			height 80px
			img
				max-height 50px
			.brand-logo-title
				font-size 13px
				line-height 30px
@media screen and (max-width: 767px)
	#brands-header
		input
			width 218px
			float none
			margin 0 auto
			display block
		#brands-sort
			float none
			margin 0
			font-size 12px
			text-align center

	.a-z
		width calc(50% - 30px)
		margin 0 0 30px 20px

	.letters-header
		margin 30px 0 0 20px
		font-size 24px


	#brands-logos
		margin 0 20px
		.brand-logo-card
			width 33.33333333%
			height 60px
			img
				max-height 40px
			.brand-logo-title
				font-size 12px
				line-height 20px
