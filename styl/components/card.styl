.card
	width 268px
	float left
	margin 0 0 30px 30px
	border 1px solid cardBorderColor
	border-radius 3px
	position relative
	transition all .2s ease-in
	&:hover
		border 1px solid lightBlue
	.card-image-link
		position relative
		display block
		padding-top 100%
		&:after
			display block
			content ""
			background url("../i/eyes.png") center 120px no-repeat, blueRgba(.43)
			width 100%
			height 100%
			left 0
			top 0
			position absolute
			opacity 0
			transition all .2s ease-in
		&:hover:after
			opacity 1

		img
			position absolute
			left 0
			top 0
			bottom 0
			right 0
			margin auto
			max-width 100%
			max-height 100%
			display block
			border-radius 3px 3px 0 0
	.card-title
		display block
		font-size 14px
		height 54px
		overflow hidden
		font-weight 600
		color blue
		line-height 18px
		padding 20px 15px 0
		margin-bottom 7px
		transition all .2s ease-in
		&:hover
			color pink
	.card-code
		font-size 12px
		color blue
		font-weight 300
		margin 0 15px
		float left
	.card-absent
		float right
		font-size 12px
		font-weight 500
		margin 0 15px 0 0
		&.green
			color green
		&.red
			color red
	.card-price
		padding 10px 15px
		font-size 20px
		font-weight 500
		.old-price
			color blue
			display inline-block
			margin 0 15px 0 0
		.price
			color pink
			display inline-block
	.card-form
		padding 0 15px 15px
		.count-picker
			float left
			margin 2px 0 0
		.card-add-button
			line-height 30px
			float right
			width 105px
			font-weight 500
			font-size 14px
			text-align center
			border none
			background-color lightBlue
			color white
			cursor pointer
			border-radius 2px
			transition all .2s ease-in
			&:hover
				background-color blue
	.card-tag
		position absolute
		right -12px
		padding 2px 12px 0 10px
		line-height 34px
		height 32px
		font-family futura
		&.new
			background yelow
			top 168px
			color red
			text-transform uppercase
			&:before
				top 0
				display block
				position absolute
				left -20px
				content ""
				width 0
				height 0
				border-top 17px solid yelow
				border-left 20px solid transparent
				border-bottom 17px solid yelow
			&:after
				width 0
				height 0
				display block
				content ""
				position absolute
				right 0
				top 34px
				border-top 12px solid tagYelow
				border-right 12px solid transparent
		&.action
			@extend .card .card-tag.new
			background tagLightBlue
			color white
			top 207px
			&:before
				border-top 17px solid tagLightBlue
				border-bottom 17px solid tagLightBlue	
			&:after
				border-top 12px solid tagBlue
		&.discount
			@extend .card .card-tag.new
			background red
			color white
			text-transform lowercase
			top 247px
			&:before
				border-top 17px solid red
				border-bottom 17px solid red
			&:after
				border-top 12px solid tagRed


@media screen and (max-width: 1230px)

	.card
		width calc(33.333333% - 22px)
		margin 0 0 20px 20px
		.card-code
			font-size 11px
		.card-absent
			font-size 11px
		.card-tag
			right -10px
			line-height 30px
			height 29px
			font-size 14px
			padding 1px 5px 0 5px
			&.new
				top auto
				bottom 220px
				&:before
					left -15px
					border-top 15px solid yelow
					border-left 15px solid transparent
					border-bottom 15px solid yelow
				&:after

					top 30px
					border-top 10px solid tagYelow
					border-right 10px solid transparent
			&.action
				top auto
				bottom 185px
				&:before
					left -15px
					border-top 15px solid tagLightBlue
					border-bottom 15px solid tagLightBlue
					border-left 15px solid transparent
				&:after
					top 30px
					border-top 10px solid tagBlue
			&.discount
				top auto
				bottom 150px
				&:before
					left -15px
					border-top 15px solid red
					border-bottom 15px solid red
					border-left 15px solid transparent

				&:after
					top 30px
					border-top 10px solid tagRed


@media screen and (max-width: 1023px)

	.card
		width calc(50% - 22px)
		margin 0 0 20px 20px
@media screen and (max-width: 767px)

	.card
		width auto
		float none
		margin 0 20px
		padding 15px 0
		border-radius 0
		border none
		border-bottom 1px solid mobileCardBorder
		&:hover
			border none
			border-bottom 1px solid mobileCardBorder
		.card-title
			padding 0
			font-size 14px
			line-height 20px
			height 60px
			font-weight 700
		.card-image-link
			width 100px
			height 100px
			padding 0
			float left
		.card-content
			float right
			width calc(100% - 115px)
			padding 0 0 0 15px
			position relative
		.card-tag
			right calc(100% - 5px)
			font-size 6px
			line-height 12px
			height 11px
			padding 1px 5px 0
			&.new
				top auto
				bottom 50px
				&:before
					left -6px
					border-top 6px solid yelow
					border-left 6px solid transparent
					border-bottom 6px solid yelow
				&:after

					top 100%
					border-top 6px solid tagYelow
					border-right 6px solid transparent
			&.action
				top auto
				bottom 35px
				&:before
					left -6px
					border-top 6px solid tagLightBlue
					border-bottom 6px solid tagLightBlue
					border-left 6px solid transparent
				&:after
					top 100%
					border-right 6px solid transparent
					border-top 5px solid tagBlue
			&.discount
				top auto
				bottom 20px
				&:before
					left -6px
					border-top 6px solid red
					border-bottom 6px solid red
					border-left 6px solid transparent

				&:after
					top 100%
					border-right 6px solid transparent
					border-top 5px solid tagRed
		.card-code
			display none
		.card-absent
			display none
		.count-picker
			display none
		.card-price
			float left
			padding 0
			margin 7px 0 0
			font-size 20px
			.old-price
				display none
		.card-form
			padding 0
