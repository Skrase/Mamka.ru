.content-404
	border-top 1px solid headerBorderColor

#block-404
	text-align center
	color blue
	padding 0 0 100px
	img
		margin 70px auto 50px
	#title-404
		font-size 52px

		font-weight 500
	#text-404
		font-size 32px
		font-weight 500
		margin 30px 0 40px
	input
		width 695px
		padding 0 20px
		border 1px solid blue
		line-height 48px
		background url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20viewBox%3D%220%200%20300%20300%22%20stroke%3D%22%2300104b%22%3E%3Cdefs%3E%3Cstyle%3E.cls-1%7Bfill%3Anone%3Bstroke-linecap%3Around%3Bstroke-linejoin%3Around%3Bstroke-width%3A6px%3B%7D%3C/style%3E%3C/defs%3E%3Ccircle%20class%3D%22cls-1%22%20cx%3D%22135.6%22%20cy%3D%22139%22%20r%3D%2262%22/%3E%3Cpath%20class%3D%22cls-1%22%20d%3D%22M218%20226l-40.8-41M139%2093.3a39.7%2039.7%200%200%200-44%2032%22/%3E%3C/svg%3E') no-repeat right -5px center
		background-size 65px 65px

@media screen and (max-width: 1230px)
	
	#block-404
		padding 50px 20px
		img
			margin 30px auto 0
		#title-404
			font-size 43px
			margin 30px 0 0
		#text-404
			font-size 26px
			margin 20px
		input
			width calc(100% - 160px)
			padding 0 60px 0 20px

@media screen and (max-width: 1024px)
	

	#block-404
		#title-404
			font-size 34px
		#text-404
			font-size 21px
@media screen and (max-width: 760px)
	

	#block-404
		padding 50px 20px
		img
			margin 30px auto 0
		#title-404
			font-size 16px
			margin 30px 0 0
		#text-404
			font-size 12px
			margin 20px
		input
			width calc(100% - 160px)
			padding 0 60px 0 20px
			line-height 32px
			height 32px
			background-size 40px 40px

@media screen and (max-width: 500px)

	#block-404
		input
			width 200px