			display none
		td
			&.cart-image
				width 150px
				height 150px
			&.cart-title
				font-size 15px
				width calc(50% - 150px)
			&.cart-count
				width auto
				.count-picker
					font-size 14px
					button
						width 24px
						height 24px
			&.cart-price
				width auto
				width calc(100% / 12 * 3 - 20px)
				font-size 19px
			&.cart-new-price
				display none
		.cart-footer
			position relative
			td
				padding 20px 0
				&.discount-block
					width 200px
					input
						width 178px
						line-height 40px
						font-size 12px
						margin 0 0 20px
						display block
					button
						width 200px
						display block
						line-height 40px
						font-size 18px

				&.discount-title
					position absolute
					left 270px
					font-size 16px
					display block
					padding 30px 0 0
					width 150px
					text-align center
				&.discount-size
					font-size 24px
					position absolute
					left 450px
					width auto
					padding 25px 0 0
				&.sum-without-discount
					font-size 24px
					position absolute
					width calc(100% / 12 * 3 - 20px)
					right 95px
					padding 25px 0 0
				&.delivery-size
					font-size 16px
					position absolute
					width calc(100% / 12 * 3 - 20px)
					right 95px
					margin -70px 0 0
				&.delivery-title
					position absolute
					left 270px
					font-size 16px
					padding 0
					display block
					margin -50px 0 0
					width 150px
					text-align center
				&.sum-title
					font-size 16px
					position absolute
					margin -60px 0 0
					left 270px
					width 150px
					text-align center
				&.sum-size
					font-size 36px
					position absolute
					width calc(100% / 12 * 3 - 20px)
					right 95px
					margin -70px 0 0
				&.to-shop
					a
						font-size 18px
						position absolute
						left 270px
						line-height 42px
						margin-top -50px
				&.to-order
					a
						font-size 18px
						position absolute
						right 20px
						line-height 42px
						width 280px
						margin-top -50px

@media screen and (max-width: 767px)

	#cart-table
		thead
			display none
		tr
			padding 10px 20px
			margin 0 -20px
			display block
			position relative
			border-bottom 1px solid cartMobileBorder
		td
			display block
			border none!important
			&.cart-image
				display none
			&.cart-title
				font-size 14px
				line-height 28px
				height 56px
				padding 0
				width calc(50% + 20px)
				float left
			&.cart-count
				clear both
			&.revove
				position absolute
				right 20px
				top 20px
			&.cart-price
				float right
				font-size 25px
				width 140px
				margin -25px 0 0
			&.cart-new-price
				display none
		.cart-footer
			position relative!important
			display block!important
			padding 20px
			border none
			&:after
				display table
				clear both
				content ""
			td
				display block!important
				position static!important
				padding 0
				&.discount-block
					width 280px
					display block
					float none
					margin 0 auto
					input
						width calc(100% - 22px)
						display block
						margin 0 auto 20px
						font-size 14px
					button
						width 100%
						display block
						margin 0 auto
						font-size 18px

				&.discount-title
					float left
					width 110px
					text-align left
					line-height 24px
					font-size 16px
				&.discount-size
					float left
					width 25px
					line-height 24px
					text-align left
					font-size 24px
				&.sum-without-discount
					float right
					line-height 24px
					width 140px
					text-align right
				&.delivery-size
					float right
					width 140px
					margin 0
					text-align right
					font-size 16px
				&.delivery-title
					width 140px
					float left
					margin 0
					font-size 16px
					text-align left

				&.sum-title
					float left
					width 80px
					font-size 16px
					margin 0
					text-align left

				&.sum-size
					float right
					width 200px
					text-align right
					margin -10px 0 0
					font-size 36px

				&.to-shop
					display block
					width 100%
					clear both
					position static
					margin 50px 0 0
					a
						position static
						display block
						margin 0 auto
						clear both
				&.to-order
					display block
					width 100%
					clear both
					position static
					margin -100px 0 0
					a
						position static
						display block
						margin 0 auto
						clear both	