		#footer-subscribe
			color blue
			font-size 12px
			font-weight 500
			margin 15px 0 0
			text-transform uppercase
			input[type="email"]
				display block
				float left
				width 90px
				padding 0 10px
				border-radius 2px 0 0 2px
				background white
				border 1px solid topGray
				border-right none
				line-height 27px
				height 27px
				margin 10px 0 0
				font-size 12px
			input[type="submit"]
				display block
				float left
				width 90px
				border-radius 0 2px 2px 0
				background url("../i/check-icon.png") no-repeat center center, pink
				border 1px solid topGray
				border-left none
				width 33px
				height 29px
				line-height 29px
				color transparent
				overflow hidden
				margin 10px 0 0
				
	#footer-nav
		float right
		width calc(100% / 12 * 9 - 20px)
		margin 0 20px 0 0
		.footer-nav-column
			width calc(16.666666% - 10px)
			margin 0 10px 0 0
			float left
			a
				display block
				color blue
				text-decoration underline
				transition all .2s ease-in
				&:hover
					color pink
			h2
				font-size 12px
				font-weight 500
				text-transform uppercase
			ul
				margin 10px 0 20px
				transition all .2s ease-in
				&:hover li
					opacity .6
					&:hover
						opacity 1
				li
					opacity .8
					display block
					font-size 12px
					font-weight 300
					line-height 16px
					transition all .2s ease-in

	#bottom-footer
		background topGray
		padding 10px 0
		line-height 30px
		color white
		a
			color white
			text-decoration underline
			transition all .2s ease-in
			&:hover
				color pink
		.metrics
			float left
			margin 0 0 0 30px
		.made-in
			float right
			margin 0 30px 0 30px
			font-size 14px
			font-weight 500
			text-align right


