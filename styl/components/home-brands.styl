
.home-brand-card
	display block
	width 170px
	height 100px
	margin 0 0 0 30px
	float left
	position relative
	img
		position absolute
		left 0
		top 0
		bottom 0
		right 0
		margin auto
		max-width 100%
		max-height 100%

@media screen and (max-width: 1230px)

	#home-brands
		// padding 0 20px
		.home-brands-cards
			padding 0 20px
	.home-brand-card
		width calc(100% / 6)
		height 0
		padding-bottom 6.6735112936%
		margin 0 0 20px
		img
			position absolute
			left 0
			top 0
			bottom 0
			right 0
			margin auto

@media screen and (max-width: 767px)

	#home-brands
		display none
			