				font-size 15px
				margin 0 0 5px 70px
				font-weight 300

@media screen and (max-width: 1023px)

	.promo-item
		&.promo-text
			padding 0 0 0 20px
			width calc(50% - 50px)
		.promo-header
			font-size 37px
			&.courier-header
				margin 10px 0 15px 5px
		p.with-icon
			width auto
			line-height 18px
			&.box-icon
				background-size 40px 40px
				padding 10px 0 0 50px
			&.restart-icon
				background-size 35px 35px
				padding 10px 0 0 50px
			&.card-icon
				padding 5px 0 0 50px
				background-size 30px 30px
				background-position 3px 0
		#show-all-cities
			margin 30px 0 0 50px
			display none


	.point-item
		padding 5px 0 0 50px
		line-height 18px
		background-size 30px 30px
			



