#order-left
	float left
	margin 0 0 0 30px
	width 600px
	color blue
	h2
		font-size 18px
		font-weight 700
		margin 15px 0 20px
	h3
		font-size 14px
		font-weight 500
		margin 0 0 20px
	.order-input-block
		float left
		width 240px
		margin 3px 60px 30px 0
		input:not([type="checkbox"])
			width 218px
			padding 0 10px
			line-height 35px
			border-radius 2px
			border 1px solid topGray
			&:focus
				border 1px solid blue
				outline none
				
		label:not(.checkbox-ui)
			display block
			margin 0 0 8px
			font-size 14px
			font-weight 500
		label.checkbox-ui
			display block
		.send-checkbox
			margin 15px 0 0
	.order-buttons
		clear both
		text-align center
		.to-cart
			text-decoration underline
			color blue
			font-weight 300
			display inline-block
			transition all .2s ease-in
			&:hover
				color pink
		.to-pay
			display inline-block
			width 230px
			transition all .2s ease-in
			background lightBlue
			text-align center
			margin 0 0 0 80px
			color white
			font-size 18px
			font-weight 700
			line-height 42px
			border-radius 2px
			&:hover
				background blue

#order-right
	margin 17px 30px 0 0
	float right
