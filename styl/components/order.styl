#order-left
	float left
	margin 0 0 0 30px
	width 600px
	color blue
	h2
		font-size 18px
		font-weight 700
		margin 15px 0 20px
	h3
		font-size 14px
		font-weight 500
		margin 0 0 20px
	.order-input-block
		float left
		width 240px
		margin 3px 60px 30px 0
		input:not([type="checkbox"])
			width 218px
			padding 0 10px
			line-height 35px
			border-radius 2px
			border 1px solid topGray
			&:focus
				border 1px solid blue
				outline none
				
		label:not(.checkbox-ui):not(.radio-ui)
			display block
			margin 0 0 8px
			font-size 14px
			font-weight 500
		label.checkbox-ui
			display block
		.send-checkbox
			margin 15px 0 0
	.order-buttons
		clear both
		text-align center
		.to-cart
			text-decoration underline
			color blue
			font-weight 300
			display inline-block
			transition all .2s ease-in
			&:hover
				color pink
		.to-pay
			display inline-block
			width 230px
			transition all .2s ease-in
			background lightBlue
			text-align center
			margin 0 0 0 80px
			color white
			font-size 18px
			font-weight 700
			line-height 42px
			border-radius 2px
			&:hover
				background blue

#order-right
	margin 17px 30px 0 0
	float right


@media screen and (max-width: 1230px)

	#order-left
		width calc(50% - 20px)
		margin 0 0 30px 20px
		h2
			font-size 15px
		h3
			font-size 12px
		.order-input-block
			float left
			width calc(50% - 50px)
			margin 0 50px 20px 0
			input:not([type="checkbox"])
				width calc(100% - 22px)
				line-height 29px
					
			label:not(.checkbox-ui)
				margin 0 0 10px
				font-size 12px
			label.checkbox-ui
				display block
				.checkbox-item
					margin 0 20px 0 0
				div
					font-size 12px
			.send-checkbox
				margin 15px 0 0
		.order-buttons
			clear both
			text-align center
			.to-cart
				font-size 12px
			.to-pay
				width 190px
				margin 0 0 0 50px
				font-size 15px
				line-height 35px

	#order-right
		margin 0 20px 30px 0
		width calc(50% - 20px)


@media screen and (max-width: 1023px)

	#order-left
		float none
		width auto
		margin 0 20px 30px
		h2
			font-size 18px
			margin 15px 20px 20px
		h3
			font-size 14px
		.order-input-block
			float left
			width calc(50% - 40px)
			margin 0 20px 30px
			input:not([type="checkbox"])
				width calc(100% - 22px)
				line-height 35px

			label:not(.checkbox-ui)
				font-size 14px
			label.checkbox-ui
				display block
				div
					font-size 14px
			.send-checkbox
				margin 15px 0 0
		.order-buttons
			clear both
			text-align center
			.to-cart
				font-size 14px
			.to-pay
				width 230px
				margin 0 0 0 50px
				font-size 18px
				line-height 42px

	#order-right
		float none
		width auto
		margin 0 20px 30px
		padding-bottom 40.3%
		background url("../i/program.png") no-repeat center center
		background-size 100% auto
		img
			display none

@media screen and (max-width: 767px)

	#order-left
		float none
		width 280px
		margin 0 auto 100px
		h2
			font-size 18px
			margin 15px 0 20px
		h3
			font-size 14px
		.order-input-block
			float none
			width auto
			margin 0 0 20px

		.order-buttons
			clear both
			text-align center
			.to-cart
				display block
				width 100%
				line-height 42px
				margin 70px 0 0
			.to-pay
				display block
				width 100%
				line-height 42px
				margin -90px 0 0

	#order-right
		display none