.home-news-card
	width 370px
	height 100px
	margin 0 0 30px 30px
	float left
	.news-card-image
		display block
		float left
		width 100px
		height 100px
		margin 0 30px 0 0
	.news-card-content
		width 240px
		height 100px
		float left
		position relative
		.news-card-title
			padding 15px 0
			display block
			font-size 14px
			font-weight 600
			color blue
			transition all .2s ease-in
			&:hover
				color pink
		.news-card-time
			position absolute
			bottom 15px
			left 0
			font-size 14px
			color blue
			font-weight 500
		.news-card-more-link
			position absolute
			bottom 15px
			right 0
			font-size 14px
			color pink
			text-decoration underline
			font-weight 500
			transition all .2s ease-in
			&:hover
				color blue